function getClass (icon: string | undefined, isActive: boolean | undefined) {
  if (isActive) {
    return `${icon ? 'flex-row' : 'flex-col'} flex items-center justify-center group p-2 border-4 w-min-content bg-emerald-200 border-emerald-500 rounded-xl border-pink-900 border-pink-900 shadow-lg1`;
  } else {
    return `${icon ? 'flex-row' : 'flex-col'} flex items-center justify-center group p-2 border-4 w-min-content bg-emerald-200 border-emerald-500 rounded-xl group-hover:border-pink-900 group-focus:border-pink-900 focus:border-pink-900 shadow-lg1`;
  }
}
---

<a id={`${key}`} href={href} class="group link-card focus:outline-none">
  <div
    id={`${key}`}
    class={getClass(icon, isActive)}
  >
    <span
      id={`${key}`}
      class="text-base md:text-xl font-bold group-hover:text-slate-900 text-center"
    >
      {" " + title}
    </span>
    {
      icon && (
      <svg
        class="inline-block w-20 h-12"
        id={`${key}`}
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 512 512"
        ><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
        <path id={`${key}`} d={iconMap[icon]}></path></svg
      >
      )}
    <p id={`${key}`} class="text-sm md:text-lg">
      {body}
    </p>
  </div>
</a>
