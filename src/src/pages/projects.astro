---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Projects">
  <main>
    <header class="flex items-center">
      <div class="flex-0 text-5xl text-gradient arrow-container">
        <a href="./"><div class="arrow-draw"></div></a>
        <!-- <a class="arrow" href="./">‚Üê</a> -->
      </div>
      <h1 class="flex-0">
        <span class="text-gradient text-5xl m-2 font-extrabold">Projects</span>
      </h1>
    </header>
    <ul role="list" class="link-card-grid">
      <div class="p-4">
        <Card
          href="https://github.com/jadrian-abramovitch/FindMeATeam"
          title="Find Me A Team!"
          body="Find Me A Team allows users to connect with other players from their favorite games. This site is able to facilitate these human connections without having all features 100% complete. Currently the only game supported is League of Legends, but will be expanded to other games such as CS:GO, Overwatch, Dota etc."
        />
      </div>
      <div class="p-4">
        <Card
          href="https://github.com/jadrian-abramovitch/NHL-Scraper"
          title="NHL roster building investigation"
          body="A web scraper for NHL.com to analyze the relationship between talent distribution and team success."
        />
      </div>
      <div class="p-4">
        <Card
          href="https://github.com/jadrian-abramovitch/Connect4"
          title="Connect 4 with AI"
          body="A fully functional Connect 4 game versus an AI which uses the minimax algorithm. This game is built using python, leveraging the Pygame module for the visuals. The backend logic uses a 2d - numpy array to represent the board state."
        />
      </div>
    </ul>
  </main>
</Layout>

<style>
  .m-2 {
    margin: 1rem;
  }
  .arrow-draw {
    border-top: 12px solid transparent;
    border-right: 30px solid black;
    border-bottom: 12px solid transparent;
  }
  .arrow-container {
    display: flex;
    flex-direction: column;
    text-align: center;

    /* justify-content: center; */
  }
  .arrow {
    border: 2px solid black;
    font-size: 4rem;
    margin: 0px;
    /* margin: 3rem 0rem; */
  }
  .text-5xl {
    font-size: 3rem;
    line-height: 1;
  }
  .flex-0 {
    flex: 0;
  }
  header {
    margin: 1rem;
    margin-left: 0rem;
    display: flex;
    align-items: center;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
