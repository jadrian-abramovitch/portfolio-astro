---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Jadrian's Portfolio">
  <main class="flex flex-col justify-center content-center">
    <div class="flex-0">
      <header class="m-4 flex items-center">
        <div class="flex-0 text-5xl text-slate-500"><a href="./">‚Üê</a></div>
        <h1 class="flex-0">
          <span class="text-gradient text-5xl m-2 font-extrabold">Contact</span>
        </h1>
      </header>
      <ul role="list" class="link-card-grid">
        <Card
          href="https://www.linkedin.com/in/jadrian-abramovitch-62bba5180"
          title="LinkedIn"
          body="Come say hello on LinkedIn"
        />
        <Card
          href="mailto:jmabramo@uwaterloo.ca"
          title="Email"
          body="For those who are too shy for (or don't enjoy) LinkedIn"
        />
        <Card
          href="https://github.com/jadrian-abramovitch/"
          title="GitHub"
          body="Look at some code I wrote"
        />
        <Card
          href="./smoke-signal"
          title="Smoke Signals"
          body="Tried and true, just make sure to check the weather first"
        />
      </ul>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
    height: 100vh;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    line-height: 1.6;
    margin: 1rem 0;
    border: 1px solid rgba(var(--accent), 25%);
    background-color: white;
    padding: 1rem;
    border-radius: 0.4rem;
  }
  .instructions code {
    font-size: 0.875em;
    font-weight: bold;
    background: rgba(var(--accent), 12%);
    color: rgb(var(--accent));
    border-radius: 4px;
    padding: 0.3em 0.45em;
  }
  .instructions strong {
    color: rgb(var(--accent));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
  }
</style>
